<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_login">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/main_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <Button
            android:id="@+id/main_btn_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button2_layout"
            android:fontFamily="@font/nanumsquarer"
            android:text="LOG IN"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/main_btn_sign_up"
            app:layout_constraintEnd_toStartOf="@+id/main_guideline2"
            app:layout_constraintStart_toStartOf="@+id/main_guideline1" />

        <Button
            android:id="@+id/main_btn_sign_up"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/button_layout"
            android:fontFamily="@font/nanumsquarer"
            android:text="SIGN UP"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/main_guideline4"
            app:layout_constraintEnd_toStartOf="@+id/main_guideline2"
            app:layout_constraintStart_toStartOf="@+id/main_guideline1" />

        <TextView
            android:id="@+id/main_tv_muscle_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumsquareeb"
            android:text="Muscle Up"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/main_guideline2"
            app:layout_constraintStart_toStartOf="@+id/main_guideline1"
            app:layout_constraintTop_toBottomOf="@id/main_iv" />

        <ImageView
            android:id="@+id/main_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/main_guideline2"
            app:layout_constraintStart_toStartOf="@+id/main_guideline1"
            app:layout_constraintTop_toTopOf="@id/main_guideline3"
            app:srcCompat="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>