<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.myExpertProfile.MyExpertProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F6F8">

        <ImageButton
            android:id="@+id/my_expert_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareeb"
            android:text="전문가 프로필"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/my_expert_btn_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/my_expert_btn_back" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_expert_iv_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/my_expert_btn_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/radius"
            android:elevation="6dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="60dp"
            app:layout_constraintBottom_toTopOf="@id/my_expert_guideline5"
            app:layout_constraintLeft_toLeftOf="@id/my_expert_guideline1"
            app:layout_constraintRight_toRightOf="@id/my_expert_guideline4"
            app:layout_constraintTop_toTopOf="@id/my_expert_iv_profile">

            <TextView
                android:id="@+id/my_expert_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_expert_guideline8" />

            <TextView
                android:id="@+id/my_expert_tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#9F9F9F"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_expert_tv_name" />

            <TextView
                android:id="@+id/my_expert_tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/my_expert_tv_age_type"
                app:layout_constraintLeft_toLeftOf="@id/my_expert_tv_age_type"
                app:layout_constraintRight_toRightOf="@id/my_expert_tv_age_type" />

            <TextView
                android:id="@+id/my_expert_tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/my_expert_tv_sex_type"
                app:layout_constraintLeft_toLeftOf="@id/my_expert_tv_sex_type"
                app:layout_constraintRight_toRightOf="@id/my_expert_tv_sex_type" />
            
            <TextView
                android:id="@+id/my_expert_tv_age_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나이"
                android:textColor="#9F9F9F"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/my_expert_guideline9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/my_expert_tv_sex_type" />

            <TextView
                android:id="@+id/my_expert_tv_sex_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textColor="#9F9F9F"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/my_expert_guideline9"
                app:layout_constraintLeft_toRightOf="@id/my_expert_tv_age_type"
                app:layout_constraintRight_toRightOf="parent" />
            
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="#9F9F9F"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toTopOf="@id/my_expert_tv_age"
                app:layout_constraintBottom_toBottomOf="@id/my_expert_tv_age_type"
                app:layout_constraintLeft_toLeftOf="@id/my_expert_tv_age"
                app:layout_constraintRight_toRightOf="@id/my_expert_tv_sex"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_expert_guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_expert_guideline9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="트레이너 자격증"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/my_expert_cl_certificate"
            app:layout_constraintLeft_toLeftOf="@id/my_expert_guideline1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_expert_cl_certificate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/radius"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="@id/my_expert_guideline7"
            app:layout_constraintLeft_toLeftOf="@id/my_expert_guideline1"
            app:layout_constraintRight_toRightOf="@id/my_expert_guideline4"
            app:layout_constraintTop_toTopOf="@id/my_expert_guideline6">

            <ImageView
                android:id="@+id/my_expert_iv_certificate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/my_expert_guideline10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_expert_tv_certificate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="@id/my_expert_guideline10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/my_expert_tv_certificate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                app:layout_constraintLeft_toLeftOf="@id/my_expert_guideline10"
                app:layout_constraintTop_toBottomOf="@id/my_expert_tv_certificate_name" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/my_expert_guideline10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/my_expert_guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>