<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.changePassword.ChangePasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/change_pass_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareeb"
            android:text="비밀번호 변경"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/change_pass_btn_back"
            app:layout_constraintBottom_toBottomOf="@id/change_pass_btn_back"/>
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/change_pass_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1"/>
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/change_pass_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9"/>
        
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/change_pass_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/change_pass_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8"/>

        <TextView
            android:id="@+id/change_pass_tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="새 비밀번호"
            android:textColor="#000000"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/change_pass_et_new"
            app:layout_constraintStart_toStartOf="@+id/change_pass_guideline1"
            app:layout_constraintTop_toBottomOf="@id/change_pass_guideline3" />

        <EditText
            android:id="@+id/change_pass_et_new"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:hint="새 비밀번호를 입력해주세요"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/change_pass_tv_check"
            app:layout_constraintEnd_toStartOf="@+id/change_pass_guideline2"
            app:layout_constraintStart_toStartOf="@+id/change_pass_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_tv_new" />

        <TextView
            android:id="@+id/change_pass_tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            android:textSize="12dp"
            app:layout_constraintBottom_toTopOf="@id/change_pass_et_check"
            app:layout_constraintStart_toStartOf="@+id/change_pass_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_et_new" />

        <EditText
            android:id="@+id/change_pass_et_check"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            android:hint="비밀번호를 확인해주세요"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/change_pass_btn_edit"
            app:layout_constraintEnd_toStartOf="@id/change_pass_guideline2"
            app:layout_constraintStart_toStartOf="@id/change_pass_guideline1"
            app:layout_constraintTop_toBottomOf="@+id/change_pass_tv_check" />

        <Button
            android:id="@+id/change_pass_btn_edit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/signup_button_layout"
            android:text="변경하기"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumsquarer"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/change_pass_guideline4"
            app:layout_constraintLeft_toLeftOf="@id/change_pass_guideline1"
            app:layout_constraintRight_toRightOf="@id/change_pass_guideline2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>