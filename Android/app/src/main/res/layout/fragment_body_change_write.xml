<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.bodychangelist.BodyChangeWriteFragment">
    <ImageButton
            android:adjustViewBounds="true"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="@drawable/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="30dp"/>

    <TextView
            android:id="@+id/Text"
            android:layout_width="100dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="게시물 작성"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="38dp" />

    <EditText
            android:id="@+id/writetext"
            android:layout_width="334dp"
            android:layout_height="28dp"
            android:background="#ffffff"
            android:text="제목"
            android:textSize="12sp"
            android:layout_marginTop="115dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
            android:id="@+id/writedate"
            android:layout_width="334dp"
            android:layout_height="28dp"
            android:background="@null"
            android:text="날짜 입력"
            android:textSize="10sp"
            android:layout_marginTop="145dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:background="#6C6C6C"
            android:layout_width="350dp"
            android:layout_height="2px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="100dp" />

    <View
            android:background="#D3D3D3"
            android:layout_width="350dp"
            android:layout_height="2px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="180dp" />

    <EditText
            android:id="@+id/writetext2"
            android:layout_width="334dp"
            android:layout_height="200dp"
            android:background="#ffffff"
            android:text="내용을 입력하세요"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginTop="205dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:background="#6C6C6C"
            android:layout_width="350dp"
            android:layout_height="2px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="435dp" />

    <Button
            android:id="@+id/changepicture"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:text="사진 첨부하기"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="445dp"
            android:layout_marginRight="30dp" />

    <Button
            android:id="@+id/Login"
            android:layout_width="280dp"
            android:layout_height="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="650dp"
            android:background="@drawable/signup_button_layout"
            android:text="작성완료"
            android:textColor="#ffffff" />
</androidx.constraintlayout.widget.ConstraintLayout>