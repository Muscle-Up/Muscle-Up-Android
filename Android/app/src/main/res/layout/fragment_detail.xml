<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.registerExpert.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/detail_et_intro"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_layout"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/detail_et_name"
            app:layout_constraintLeft_toLeftOf="@id/detail_guideline1"
            app:layout_constraintRight_toRightOf="@id/detail_guideline2"
            app:layout_constraintTop_toTopOf="@id/detail_guideline3" />

        <EditText
            android:id="@+id/detail_et_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/detail_et_intro"
            app:layout_constraintBottom_toTopOf="@id/detail_et_date"
            app:layout_constraintLeft_toLeftOf="@id/detail_guideline1"
            android:background="@drawable/edittext_layout"
            android:paddingStart="10dp"
            app:layout_constraintRight_toRightOf="@id/detail_guideline2"/>

        <EditText
            android:id="@+id/detail_et_date"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/edittext_layout"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/detail_et_name"
            app:layout_constraintBottom_toBottomOf="@id/detail_guideline4"
            app:layout_constraintLeft_toLeftOf="@id/detail_guideline1"
            app:layout_constraintRight_toRightOf="@id/detail_guideline2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/detail_guideline1"
            app:layout_constraintBottom_toTopOf="@id/detail_et_intro"
            android:textColor="@android:color/black"
            android:text="한줄 소개"
            android:fontFamily="@font/nanumsquarer"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/detail_guideline1"
            app:layout_constraintBottom_toTopOf="@id/detail_et_name"
            android:textColor="@android:color/black"
            android:text="자격증 이름"
            android:fontFamily="@font/nanumsquarer"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/detail_guideline1"
            app:layout_constraintBottom_toTopOf="@id/detail_et_date"
            android:textColor="@android:color/black"
            android:text="자격증 취득 날짜"
            android:fontFamily="@font/nanumsquarer"
            android:layout_margin="5dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/detail_guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>