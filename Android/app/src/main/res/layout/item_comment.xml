<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/qna_detail_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:textSize="14sp"
            android:text="asdf"
            app:layout_constraintStart_toEndOf="@+id/qna_detail_user_tv"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/qna_detail_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="asdf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/qna_detail_vertical_line"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/colorLightGray"
            app:layout_constraintBottom_toBottomOf="@+id/qna_detail_date_tv"
            app:layout_constraintEnd_toStartOf="@+id/qna_detail_date_tv"
            app:layout_constraintStart_toEndOf="@+id/qna_detail_user_tv"
            app:layout_constraintTop_toTopOf="@+id/qna_detail_date_tv" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qna_detail_user_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>