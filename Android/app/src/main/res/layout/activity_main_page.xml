<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mainPage.MainPageActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/main_dl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F6F8">

            <FrameLayout
                android:id="@+id/main_fl_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/main_bnv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/main_bnv"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@android:color/white"
                android:elevation="0dp"
                android:paddingHorizontal="30dp"
                app:itemBackground="@drawable/menu_selector_background"
                app:itemIconSize="25dp"
                app:itemIconTint="@drawable/menu_selector_color"
                app:labelVisibilityMode="unlabeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:menu="@menu/menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_drawer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_iv_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/main_tv_name"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@id/main_tv_name"
                app:layout_constraintLeft_toLeftOf="@id/main_tv_name"
                app:layout_constraintRight_toRightOf="@id/main_tv_name"
                app:layout_constraintTop_toTopOf="@id/main_iv_profile" />

            <TextView
                android:id="@+id/main_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/main_iv_profile"
                app:layout_constraintLeft_toRightOf="@id/main_iv_profile"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_tv_hello" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_my_expert_profile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/drawer_btn_my_expert_profile"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/button_drawer"
                android:elevation="0dp"
                android:text="내 전문가 프로필 보기"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_register_expert"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_register_expert"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/drawer_btn_register_expert"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/button_drawer"
                android:elevation="0dp"
                android:text="전문가 등록하기"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_change_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_change_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/drawer_btn_change_info"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/button_drawer"
                android:text="프로필 사진 / 개인정보 수정"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_change_password"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_change_password"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/drawer_btn_change_password"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/button_drawer"
                android:text="비밀번호 변경"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_logout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#D4D4D4"
                app:layout_constraintBottom_toTopOf="@id/drawer_btn_logout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <Button
                android:id="@+id/drawer_btn_logout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/button_drawer"
                android:text="로그아웃"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>